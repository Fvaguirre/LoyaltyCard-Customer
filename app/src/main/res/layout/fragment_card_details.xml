<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="card.loyalty.loyaltycardcustomer.DetailedCardViewActivity">

    <android.support.v7.widget.CardView
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.0">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/detail_bizName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                tools:text="Business Name"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="8dp"
                app:layout_constraintLeft_toLeftOf="parent" />

            <TextView
                android:id="@+id/detail_bizAddr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Business Address"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/detail_bizName"
                android:layout_marginLeft="8dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/imageView2"
                android:layout_marginRight="8dp"
                app:layout_constraintHorizontal_bias="0.05" />

            <TextView
                android:id="@+id/detail_offerDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="24dp"
                android:textSize="18sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/detail_bizAddr"
                tools:text="Offer Description" />

            <TextView
                android:id="@+id/detail_ppr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Purchases Per Reward"
                android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@+id/detail_offerDesc"
                android:layout_marginLeft="8dp"
                app:layout_constraintLeft_toLeftOf="parent" />

            <TextView
                android:id="@+id/detail_reward"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Reward"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/detail_ppr"
                android:layout_marginLeft="8dp"
                app:layout_constraintLeft_toLeftOf="parent" />

            <TextView
                android:id="@+id/detail_purchCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Purchase Count"
                android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@+id/detail_reward"
                android:layout_marginLeft="8dp"
                app:layout_constraintLeft_toLeftOf="parent" />

            <TextView
                android:id="@+id/detail_rewardsIssued"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                app:layout_constraintLeft_toLeftOf="parent"
                tools:text="Rewards Issued"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/detail_purchToNext" />

            <TextView
                android:id="@+id/detail_rewardsClaimed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/detail_rewardsIssued"
                tools:text="Rewards Claimed" />

            <TextView
                android:id="@+id/detail_purchToNext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/detail_purchCount"
                tools:text="Purchases To Next Reward" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="8dp"
                android:layout_marginRight="8dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/detail_bizName"
                android:layout_marginLeft="8dp"
                app:layout_constraintHorizontal_bias="1.0" />

            <ImageView
                android:id="@+id/product_image"
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:layout_constraintLeft_toRightOf="@+id/detail_bizName"
                android:layout_marginLeft="200dp" />

        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>
